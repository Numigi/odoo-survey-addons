<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_answer_for_partner_wizard" model="ir.ui.view">
        <field name="name">Answer Survey For Partner Wizard</field>
        <field name="model">survey.answer.for.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Select A Partner">
                <group>
                    <field name="survey_id" invisible="1"/>
                    <field name="partner_id" required="1"/>
                </group>
                <footer>
                    <button name="action_validate"
                            string="Validate"
                            type="object"
                            class="oe_highlight"
                            />
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            />
                </footer>
            </form>
        </field>
    </record>

</odoo>
